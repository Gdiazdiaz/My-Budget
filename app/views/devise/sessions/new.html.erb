<div class='header'>
<%= link_to root_path do %>
  <%= image_tag 'left-arrow.png', alt: 'left-arrow', class: 'return-arrow' %>
<% end %>
<h2 class='header-text'>Sign in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'input-tab' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'input-tab' %>
  </div>

  <div class="actions btn-container">
    <div class='border'>
      <%= f.submit "Log in", class: 'action-btn btn' %>
    </div>
  </div>
<% end %>

<div class='actions-container'>
<%= render "devise/shared/links" %>
</div>
